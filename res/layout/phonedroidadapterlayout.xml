<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:gravity="top" android:layout_height="wrap_content" android:focusable="false" android:layout_width="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageButton android:src="@drawable/reply" android:background="@color/ColorTransparent" android:layout_width="wrap_content" android:layout_alignParentRight="true" android:layout_alignParentTop="true" android:id="@+id/btnReply" android:layout_height="match_parent" android:focusable="false"></ImageButton>
<LinearLayout android:orientation="vertical" android:layout_height="wrap_content" android:layout_width="fill_parent" android:focusable="false" android:id="@+id/lytMain">
    <LinearLayout android:layout_height="wrap_content" android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:focusable="false">
        <LinearLayout android:id="@+id/linearLayout4" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="match_parent" android:focusable="false">
            <ImageView android:id="@+id/al_Img" android:focusable="false" android:layout_width="wrap_content" android:layout_weight="1" android:padding="0px" android:layout_gravity="center" android:layout_height="match_parent" android:src="@drawable/outgoing"></ImageView>
            <TextView android:text="@string/strDurSample" android:id="@+id/al_Duration" android:textAppearance="?android:attr/textAppearanceSmall" android:focusable="false" android:singleLine="true" android:textStyle="bold" android:layout_gravity="bottom" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="0"></TextView>
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:layout_width="match_parent" android:layout_weight="1" android:focusable="false">
            <ViewFlipper android:id="@+id/viewFlipper1" android:layout_height="wrap_content" android:layout_width="match_parent" android:contentDescription="@string/strNumber" android:inAnimation="@android:anim/fade_in" android:outAnimation="@android:anim/fade_out" android:autoStart="false" android:flipInterval="5000">
                <TextView android:paddingLeft="5sp" android:singleLine="true" android:layout_height="wrap_content" android:id="@+id/al_Text" android:textAppearance="?android:attr/textAppearanceLarge" android:focusable="false" android:layout_width="fill_parent" android:textStyle="bold" android:text="@string/strContactName" android:textColor="@color/ColorOutgoing"></TextView>
                <TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceLarge" android:textStyle="bold" android:text="@string/strContactName" android:singleLine="true" android:layout_width="fill_parent" android:id="@+id/ContactNameView"></TextView>
            </ViewFlipper>
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/linearLayout3" android:focusable="false">
                <TextView android:text="@string/strNumber" android:textAppearance="?android:attr/textAppearanceSmall" android:id="@+id/al_Number" android:layout_height="wrap_content" android:singleLine="true" android:layout_weight="1" android:layout_width="match_parent" android:focusable="false" android:paddingLeft="5sp"></TextView>
                <TextView android:text="@string/strDateTime" android:textAppearance="?android:attr/textAppearanceSmall" android:singleLine="true" android:id="@+id/al_DateTime" android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_gravity="top|right" android:textStyle="bold" android:focusable="false" android:layout_weight="0"></TextView>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="@string/strSampleData" android:id="@+id/al_Data" android:focusable="false"></TextView>
</LinearLayout>    
</RelativeLayout>
